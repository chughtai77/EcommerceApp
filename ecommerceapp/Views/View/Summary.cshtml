@model ShopCartViewModel

@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity

@inject IHttpContextAccessor HttpContextAccessor

@{
	var session = HttpContextAccessor.HttpContext.Session;
	var isLoggedIn = session.GetString("IsLoggedIn");
	var userEmail = session.GetString("UserEmail");
	var userName = session.GetString("UserName");
	var userAddress = session.GetString("UserAddress");
	var userPhone = session.GetString("UserPhone");
}

<form method="post">
<br />
<div class="container">
	<div class="card">
		<div class="card-header bg-dark text-light ml-0">
			<div class=" row container">
				<div class="col-6">
					<i class="fa fa-shopping-cart"></i> &nbsp;
					Order Summary For registered User
				</div>
				<div class="col-6 text-end">
					<a asp-action="cart" class="btn btn-outline-info btn-sm">Back to Cart</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="container rounded p-2">
				<div class="row">
					<div class="col-12 col-lg-6 pb-4">
						<div class="row">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Shipping Details:</span>
							</h4>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Name</label>
							</div>
							<div class="col-9">
								<input asp-for="@userName" class="form-control" value="@userName" />
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Email</label>
							</div>
							<div class="col-9">
								<input asp-for="@userEmail" class="form-control" value="@userEmail" />
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Phone Number</label>
							</div>
							<div class="col-9">
								<input class="form-control" value="@userPhone" />
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Address</label>
							</div>
							<div class="col-9">
								<input class="form-control" value="@userAddress" />
							</div>
						</div>



					</div>

						@*		<div class="col-12 col-lg-5 offset-lg-1">
						<h4 class="d-flex justify-content-between align-items-center mb-3">
							<span class="text-info">Order Summary:</span>
						</h4>

						<ul class="list-group mb-3">
@foreach (var item in Model.ListCart)
{
								<li class="list-group-item d-flex justify-content-between">
									<div>
											<h6 asp-for="@item.productName" class="my-0">@item.productName</h6>
										<small class="text-muted">Quantity: @item.count</small>
									</div>
									<span class="text-muted">@(item.productPrice * item.count) Rs/- </span>
								</li>
}
							<li class="list-group-item d-flex justify-content-between bg-dark">
								<small class="text-info">Total (Rupees)</small>
								@*<strong asp-for="@Model.TotalPrice" class="text-info">@Model.TotalPrice RS/-</strong>
							</li>
						</ul>
						</div>*@
				</div>
			</div>
		</div>
		<div class="card-footer">
			<div class="row">
				<div class="col-12 col-md-8 pt-2">
					@*<p style="color:maroon; font-size:14px;">Estimate Arrival Date: </p>*@
				</div>
				<div class="col-12 col-md-4">
					<button type="submit" class="btn btn-primary form-control">Place Order</button>
				</div>
			</div>
		</div>
	</div>
</div>
</form>
